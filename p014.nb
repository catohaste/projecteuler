 RowBox[{
  RowBox[{"y", "[", "foo_", "]"}], ":=", " ", 
  RowBox[{"If", "[", 
   RowBox[{
    RowBox[{"EvenQ", "[", "foo", "]"}], ",", 
    RowBox[{"foo", "/", "2"}], ",", 
    RowBox[{
     RowBox[{"3", "*", "foo"}], "+", "1"}]}], "]"}]}]], "Input"],

